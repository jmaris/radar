<script>
  $(document).ready(function(){
    $('[data-toggle="tooltip"]').tooltip({ container: 'body'});   
  });
</script>

<div class="btn-group" role="group" aria-label="Actions">
  <%= link_to cpu_alerts_path, class: 'btn btn-default', data: { toggle: 'tooltip', title: 'Back'} do %>
  <i class="glyphicon glyphicon-arrow-left"></i>
  <% end %>

  <%= link_to edit_cpu_alert_path(@cpu_alert), class: 'btn btn-default', data: { toggle: 'tooltip', title: 'Edit' } do %><i class="glyphicon glyphicon-edit"></i><% end %>
</div>

<dl class="dl-horizontal">
  <dt>Machine ID</dt>
  <dd><%= @cpu_alert.machine_id %></dd>
</dl>

<dl class="dl-horizontal">
  <dt>E-Mail Address</dt>
  <dd><%= @cpu_alert.addressee %></dd>
</dl>

<dl class="dl-horizontal">
  <dt>CPU threshold</dt>
  <dd><%= @cpu_alert.threshold %>%</dd>
</dl>

<dl class="dl-horizontal">
  <dt>Check interval</dt>
  <dd><%= pluralize(@cpu_alert.check_interval, "minute") %></dd>
</dl>

<dl class="dl-horizontal">
  <dt>Triggered</dt>
  <dd><%= @cpu_alert.triggered %></dd>
</dl>