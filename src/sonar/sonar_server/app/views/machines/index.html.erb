<p id="notice"><%= notice %></p>

<div class = "table-responsive">
  <table class="table table-striped">
   <caption>Machines</caption>
   <thead>
    <tr>
      <th>Alias</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @machines.each do |machine| %>
    <tr>
      <td><%= machine.alias %></td>
      <td><%= link_to 'Show', machine, class: 'btn btn-primary btn-xs' %></td>
      <td><%= link_to 'Edit', edit_machine_path(machine), class: 'btn btn-primary btn-xs' %></td>
      <td><%= link_to 'Destroy', machine, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary btn-xs btn-danger' %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to new_machine_path, class: 'btn btn-success', remote: true, id:"new_machine_link" do %>
<i class="glyphicon glyphicon-plus"></i> New Machine
<% end %>
